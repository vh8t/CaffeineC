package main;

import "vyPal/cffc-std/io";

func recursion(last: i64): i64 {
	if (last > 0) {
		printf("Remaining: %d\n", last-1);
		return recursion(last-1);
	}
	return 0;
}

func main(): i64 {
	var inp: *i8 = input("Enter your name: ");

	var hello: *i8 = concat("Hello, ", inp);
	hello = concat(hello, "!");

	println(hello);

	for (var i: i64 = 0; i < 10; i = i + 1) {
		printf("%d", i);
	}
	println("");

	recursion(10);
	
	return 0;
}